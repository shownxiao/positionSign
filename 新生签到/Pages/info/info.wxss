page {
    display: flex;
    height: 100vh;
    overflow: hidden;
    justify-content: center;
}

::-webkit-scrollbar{
    width: 10rpx;
}

::-webkit-scrollbar-thumb{
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
    background: #d8d8d8;
}

::-webkit-scrollbar-track{
    -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
    border-radius: 10px;
    background: rgb(255, 255, 255);
}

.container {
    display: flex;
    position: relative;
    height: 100%;
    width: 100%;
    flex-direction: column;
    align-self: center;
    align-items: flex-start;
    align-content: flex-start;
}

.bg {
    position: fixed;
    z-index: -1;
    height: 100%;
    width: 100%;
}

.bg-image {
    height: 100%;
    width: 100%;
}

.title-box {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
}

.title-box>view {
    display: flex;
    justify-content: center;
    flex: 1;
    margin: 0;
    padding: 0;
}

.title {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    color: rgb(189, 189, 189);
    border-width: 1px 1px 1px 0;
    border-color: gray;
    border-style: solid;
    border-radius: 2px;
    font-size: 0.63em;
}

.cube-0 {
    position: absolute;
    top: 10%;
    left: 5%;
    width: 90%;
    height: 4.5%;
    background-color: white;
    border-radius: 2px;
    z-index: 1;
}

.cube-1 {
    position: absolute;
    top: 10%;
    left: 5%;
    width: 90%;
    height: 20.5%;
    background-color: white;
    border-radius: 8px 8px 0 0;
}

.cube-2 {
    display: flex;
    position: absolute;
    top: 30.5%;
    left: 5%;
    width: 90%;
    height: 56%;
}

.cube-2>image, cube-1>image {
    position: absolute;
    height: 100%;
    width: 100%;
}

.cube-1>view.box, .cube-2>view.box {
    position: absolute;
}

.box {
    position: absolute;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.image {
    position: absolute;
    width: 50%;
    height: 50%;
}

.location-info-box{
    position: absolute;
    display: flex;

    align-items: center;

    width: 100%;
    height: 100%;
}

.back-button{
    position: absolute;

    top: 5rpx;
    left: 5rpx;
}

.location-name{
    margin-left: 1em;

    font-size: 1.2em;

    width: 6em;
    
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.rank-info{
    display: flex;
    flex-direction: column;
    justify-content: center;

    height: 100%;
    width: 200rpx;

    margin-left: 20rpx;
}

.rank-info .text{
    font-size: 0.75em;
    color: #3b3b3b;
    margin-bottom: 20rpx;
}



.plane-box{
    position: absolute;
    width: 80rpx;
    height: 80rpx;

    right: 80rpx;

    border-radius:  70rpx;
    box-shadow: 0 0 5px 0 #8b8b8b;
}

.plane{
    width: 100%;
}

.img-text-box{
    position: absolute;
    z-index: 1;
    height: 100%;
    width: 100%;

    overflow: hidden;
    background-color: white;
    border-radius: 0 0 8px 8px;
}

.img-text-box image{
    position: absolute;
    z-index: 1;

    width: 100%;
}

.img-text-box .scroll-text{
    position: absolute;
    z-index: 1;

    height: 45%;
    width: 95%;

    top: 55%;
    left: 2.5%;
}

.scroll-text text{
    font-size: 36rpx;
    line-height: 60rpx;
}
