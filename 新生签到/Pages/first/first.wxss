page {
    display: flex;
    height: 100vh;
    overflow: hidden;
    justify-content: center;
}

.container {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
}

.bg {
    position: fixed;
    z-index: -1;
    height: 100%;
    width: 100%;
}

.bg-image {
    height: 100%;
    width: 100%;
}

.item-box{
    position: absolute;
    width: 100%;
    top: 45%;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.row{
    display: flex;
    flex-direction: row;
    height: 130rpx;
    width: 80%;

    margin: 25rpx;
}

.col{
    display: flex;
    flex-direction: row;
    align-items: center;

    width: 50%;
}

.icon{
    width: 50%;
}

.text{
    color:  rgb(105, 170, 128);
}

.copyright-box{
    position: absolute;
    width: 100%;
    bottom: 20rpx;

    border: 1px solid black;
}

.feedback {
    text-align: center;
    color: #42a5f5;
    font-size: 30rpx;
}

.bottom {
    width: 70%;
    left: 15%;
    text-align: center;
    position: absolute;
    padding-bottom: 2vh;
    bottom: 54rpx;
}

.copyright {
    width: 100%;
    text-align: center;
    position: absolute;
}

.copyright text {
    font-size: 30rpx;
    font-weight: 100;
}
